[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = filesystem
Target = lsb-release

[Action]
Description = Updating AxOS Specific Configurations...
When = PostTransaction
Exec = /usr/bin/axctl update-releases

[Action]
Description = Reloading AxOS release information...
When = PostTransaction
Exec = /usr/bin/axos-hooks-runner reload-releases